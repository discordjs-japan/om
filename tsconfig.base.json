{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "out-tsc",
    "composite": true,
    "emitDeclarationOnly": true,

    "target": "ES2022",
    "lib": ["ESNext"],
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true
  }
}
