{
  "extends": "@tsconfig/node22",
  "compilerOptions": {
    "module": "Preserve",
    "moduleResolution": "Node",
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "checkJs": true
  },
  "include": ["scripts/**/*", "*.config.js"],
  "exclude": ["node_modules", "dist"]
}
